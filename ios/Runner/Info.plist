<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>Runpro9ja Agent</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>runpro9ja_agent</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- ðŸ”½ CRITICAL FIXES FOR IPAD CRASH ðŸ”½ -->

	<!-- 1. DECLARE SUPPORT FOR BOTH IPHONE AND IPAD -->
	<key>UIDeviceFamily</key>
	<array>
		<integer>1</integer> <!-- iPhone -->
		<integer>2</integer> <!-- iPad -->
	</array>

	<!-- 2. FORCE FULL SCREEN ON IPAD (PREVENTS LAYOUT ISSUES) -->
	<key>UIRequiresFullScreen</key>
	<true/>

	<!-- 3. USE FLUTTER'S DEFAULT LAUNCH SCREEN (REMOVE MAIN STORYBOARD) -->
	<!-- âŒ REMOVE THIS LINE: <key>UIMainStoryboardFile</key> -->
	<!-- âŒ REMOVE THIS LINE: <string>Main</string> -->

	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>

	<!-- 4. ORIENTATION SUPPORT -->
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>

	<!-- 5. PERFORMANCE SETTINGS -->
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>

	<!-- ðŸ”½ PRIVACY DESCRIPTIONS (YOURS ARE GOOD) ðŸ”½ -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>This app needs your location to show nearby service requests and provide accurate delivery tracking</string>

	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>This app needs your location in the background to provide real-time service updates and track your position during active deliveries</string>

	<key>NSLocationAlwaysUsageDescription</key>
	<string>This app needs your location to provide continuous service updates and delivery tracking</string>

	<key>NSCameraUsageDescription</key>
	<string>This app needs camera access to scan documents and capture service-related photos</string>

	<key>NSPhotoLibraryUsageDescription</key>
	<string>This app needs photo library access to upload documents and service-related images</string>

	<key>NSMicrophoneUsageDescription</key>
	<string>This app needs microphone access for voice calls with customers and audio recordings during services</string>

	<key>NSFaceIDUsageDescription</key>
	<string>This app uses Face ID for secure agent login and authentication</string>

</dict>
</plist>